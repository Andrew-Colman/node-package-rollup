{
    "name": "node-package-rollup",
    "version": "0.1.0",
    "main": "dist/index.js",
    "source": "./src/index.ts",
    "repository": "https://github.com/andrew-colman/node-package-rollup",
    "author": {
        "name": "Andrew Colman"
    },
    "keywords": [
        "node",
        "package",
        "rollup",
        "template",
        "typescript"
    ],
    "license": "MIT",
    "bin": {
        "node-package-rollup": "dist/index.js"
    },
    "scripts": {
        "prepublishOnly": "npm run build",
        "build": "rollup --config rollup.config.js",
        "build:quick": "sucrase ./src -d ./dist --transforms typescript,imports",
        "dev": "nodemon ./src/index.ts ",
        "predev:compiled": "yarn build:quick",
        "dev:compiled": "node dist/index.js",
        "test": "jest ",
        "test:verbose": "jest --verbose",
        "test:watch": "jest --watch"
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^21.0.1",
        "@rollup/plugin-node-resolve": "^13.0.4",
        "@rollup/plugin-typescript": "^8.2.5",
        "@types/jest": "^27.0.1",
        "@types/node": "^16.11.2",
        "jest": "^27.0.6",
        "nodemon": "^2.0.15",
        "rollup": "^2.56.2",
        "rollup-plugin-preserve-shebang": "^1.0.1",
        "rollup-plugin-terser": "^7.0.2",
        "sucrase": "^3.20.1",
        "ts-jest": "^27.0.4",
        "tslib": "^2.3.1",
        "typescript": "^4.3.5"
    },
    "dependencies": {
        "jsonc-require": "^1.0.1",
        "nanov": "^1.0.2"
    }
}
